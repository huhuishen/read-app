:root {
    --bg-color: #f1f1f1;
    --reader-bg-color: #fff;
    --modal-bg-color: #f4f5f7;
    --control-bg-color: #fff;
    --control-disabled: #ebecee;
    --button-primary: #1e80ff;
    --button-primary-hover: #0066ff;
    --button-primary-text: #fff;
    --text-color: #000;
    --header-color: #411f00;
    --link-color: #777;
    --link-disabled: #cacaca;
    --highlight-color: #000;
    color-scheme: light dark;
}

[data-theme="dark"] {
    --bg-color: #262628;
    --reader-bg-color: #1e1e1e;
    --modal-bg-color: #262628;
    --control-bg-color: #4e4e4f;
    --control-disabled: #3a3a3d;
    --button-primary: #1755a5;
    --button-primary-hover: #0059df;
    --button-primary-text: #eee;
    --text-color: #ccc;
    --header-color: #bda48b;
    --link-color: #777;
    --link-disabled: #3b3b3b;
    --highlight-color: #fff;
}

html {
    scrollbar-gutter: stable;
}

body {
    background: var(--bg-color);
    /* background-color: #fff; */
    color: var(--text-color);
    transition: all 0.3s;
    margin-right: calc(100% - 100vw);
    overflow-x: hidden;
}

p,
h1,
h2,
h3,
h4,
h5,
h6 {
    overflow-wrap: break-word;
}

main {
    display: flex;
    flex-direction: column;
    max-width: 800px;
    margin: 0px auto;
    min-height: 100vh;
    /* background: var(--reader-bg-color); */
}

input:not([type]),
input[type="text"],
input[type="file"],
input[type="password"],
input[type="email"],
input[type="number"],
textarea {
    width: 100%;
    margin: 10px 0;
    padding: 6px 10px;
    border: 1px solid #ced4da;
    border-radius: 3px;
    background: #fff;
    outline: none;
    /* transition: border-color .15s, box-shadow .15s; */
}

textarea:focus,
input:focus {
    box-shadow: 0 0 0 3px rgba(0, 123, 255, 0.25);
}

.flex {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    cursor: default;
}

a {
    text-decoration: none;
    color: var(--text-color);
}

.link {
    /* padding: 8px 20px; */
    font-size: 0.9rem;
    text-decoration: none;
    color: var(--link-color);
}

.link:hover {
    color: var(--highlight-color);
}

.seperator {
    background-color: #777;
    width: 1px;
    height: 16px;
    margin: 0 15px;
}

::selection {
    background: rgba(255, 0, 0, 0.2);
}

::-moz-selection {
    background: rgba(255, 0, 0, 0.2);
}


.content {
    /* margin-left: calc(max(0px, (100vw - 800px) / 2)); */
    background: var(--reader-bg-color);
    padding: 0 4rem;
}

@media (max-width: 810px) {
    .content {
        padding: 0 1rem;
    }
}

.space-between {
    justify-content: space-between;
}

.gap-1 {
    gap: 10px;
}

.gap-2 {
    gap: 20px;
}

.m1 {
    margin: 1rem 0;
}

.mr1 {
    margin-right: 1rem;
}

.ml1 {
    margin-left: 1rem;
}

.mt1 {
    margin-top: 1rem;
}

.mt2 {
    margin-top: 2rem;
}

.mt4 {
    margin-top: 4rem;
}

.mb1 {
    margin-bottom: 1rem;
}

.mb4 {
    margin-bottom: 4rem;
}

.row {
    display: flex;
    flex-wrap: wrap;
    width: 100%;
    gap: 16px;
}

.col-1 {
    flex: 0 0 8.3333%;
    max-width: 8.3333%;
}

.col-2 {
    flex: 0 0 16.6667%;
    max-width: 16.6667%;
}

.col-3 {
    flex: 0 0 25%;
}

.col-4 {
    flex: 0 0 33.3333%;
}

.col-5 {
    flex: 0 0 41.6667%;
}

.col-6 {
    flex: 0 0 50%;
}

.col-7 {
    flex: 0 0 58.3333%;
}

.col-8 {
    flex: 0 0 66.6667%;
}

.col-9 {
    flex: 0 0 75%;
}

.col-10 {
    flex: 0 0 83.3333%;
}

.col-11 {
    flex: 0 0 91.6667%;
}

.col-12 {
    flex: 0 0 100%;
}